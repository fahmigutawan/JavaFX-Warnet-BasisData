<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane styleClass="container" stylesheets="@component/style.css" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafxwarnetbasisdata.controller.LoginUserController">
    <center>
        <VBox alignment="CENTER" spacing="8.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="8.0" />
            </padding>

            <children>
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@image/ic_gamepad.png" />
               </image>
            </ImageView>
                <Label text="Masuk sebagai Pelanggan" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="36.0" />
               </font></Label>
                <TextField fx:id="user_login_username" maxWidth="512" prefHeight="40" promptText="Username">
               <font>
                  <Font size="18.0" />
               </font></TextField>
                <PasswordField fx:id="user_login_password" maxWidth="512" prefHeight="40" promptText="Password">
               <font>
                  <Font size="18.0" />
               </font></PasswordField>
                <Button alignment="CENTER" mnemonicParsing="false" onAction="#onLoginClicked" prefHeight="40" prefWidth="512" stylesheets="@component/style.css" text="Masuk">
               <font>
                  <Font size="18.0" />
               </font></Button>
                <HBox alignment="CENTER" spacing="8.0">
                    <children>
                        <Label styleClass="normaltext" stylesheets="@component/style.css" text="Belum punya akun?" textFill="WHITE" />
                        <Label fx:id="register_klik_disini_btn" onMouseClicked="#onRegisterClicked" styleClass="normaltext" stylesheets="@component/style.css" text="Klik di sini" textFill="#0015ff" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>
    <top>
        <HBox BorderPane.alignment="CENTER">
            <padding>
                <Insets left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Button fx:id="user_login_back_btn" mnemonicParsing="false" onAction="#onBackClicked" styleClass="negativebutton" stylesheets="@component/style.css" text="Kembali" textFill="WHITE">
               <font>
                  <Font size="18.0" />
               </font></Button>
            </children>
        </HBox>
    </top>
</BorderPane>
