                <ScrollPane fitToHeight="true" fitToWidth="true">
                    <content>
                        <HBox fx:id="home_user_komputer_list" alignment="CENTER_LEFT" spacing="8.0" />
                    </content>
                </ScrollPane>
            </children>
        </VBox>
    </children>
